<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.sbs.exam.demo.repository.ArticleRepository">
	
	<resultMap id="forPrintArticle" type="Article">
	   <id property="id" column="id" />
	   <result property="title" column="title" />
	   <result property="body" column="body" />
	   <result property="regDate" column="regDate" />
	   <result property="updateDate" column="updateDate" />
	   <result property="memberLoginId" column="memberLoginId" />
	        <association property="member"  javaType="Member" >
	             <id property="loginId"  column="loginId" />
	             <result property="authLevel"  column="authLevel" />
	             <result property="nickname"  column="nickname" />
	             <result property="email"  column="email" />
	        </association>
	</resultMap>
	
	<select id="getArticle" resultType="Article">
		SELECT * FROM ARTICLE WHERE ID = #{id}
	</select>
	
	<select id="getArticles" resultType="Article">
		SELECT * FROM ARTICLE ORDER BY ID DESC
	</select>
	
	<select id="getLastInsert" resultType="int">
		SELECT LAST_INSERT_ID()
	</select>
	
	<select id="doSearch" resultType="Article">
		SELECT * FROM ARTICLE 
		WHERE TITLE LIKE CONCAT('%', #{keyword}, '%')  
		OR BODY LIKE CONCAT('%', #{keyword}, '%')
	</select>
	
	<select id="getForPrintArticle" resultMap="forPrintArticle">
		SELECT a.*, m.loginId, m.email, m.authLevel, m.name, m.nickname 
		FROM article a LEFT OUTER JOIN `member` m 
		ON a.memberLoginId = m.loginId
		WHERE a.id=#{id};
	</select>
	
	<insert id="doAdd">
		INSERT INTO ARTICLE 
		SET REGDATE = NOW(), 
		UPDATEDATE = NOW(), 
		TITLE = #{title}, 
		BODY = #{body}, 
		MEMBERID = #{memberLoginId}
	</insert>
	
	<delete id="doDelete">
		DELETE FROM ARTICLE 
		WHERE ID = #{id}
	</delete>
	
	<update id="doModify">
		UPDATE ARTICLE
		<set>
			<if test="title != null and title != '' or body != null and body != ''">
				UPDATEDATE = NOW(), 
			</if>
			<if test="title != null and title != ''">
				TITLE=#{title}, 
			</if>
			<if test="body != null and body != ''">
				BODY = #{body} 
			</if>
		</set> 
		WHERE ID = #{id}
	</update>

</mapper>
